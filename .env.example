# Discord Observer/Orchestrator Configuration
# Copy this file to .env and fill in your actual values

# Discord Configuration (REQUIRED)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
# DISCORD_APP_ID=your_discord_app_id_here  # Optional
DISCORD_INTENTS=message_content,guilds,guild_messages

# OpenAI Configuration (REQUIRED)
LLM_PROVIDER=openai
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini

# Database Configuration
DB_PATH=./data/app.db

# Training Data Configuration
TRAINING_DATA_ENABLED=true
TRAINING_DATA_PATH=./data/training_data.jsonl

# Logging
LOG_LEVEL=INFO

# Admin API
ADMIN_API_HOST=127.0.0.1
ADMIN_API_PORT=8000

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=100
MAX_LLM_CALLS_PER_MINUTE=50

# Reply Settings
MAX_REPLY_LENGTH=2000
REPLY_TIMEOUT_SECONDS=30